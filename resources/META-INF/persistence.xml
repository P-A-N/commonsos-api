<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="commonsos" transaction-type="RESOURCE_LOCAL">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>commonsos.domain.auth.User</class>
    <class>commonsos.domain.ad.Ad</class>
    <class>commonsos.domain.transaction.Transaction</class>
    <class>commonsos.domain.message.Message</class>
    <class>commonsos.domain.message.MessageThread</class>
    <class>commonsos.domain.message.MessageThreadParty</class>
    <class>commonsos.domain.community.Community</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>

    <properties>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect" />
      <property name="hibernate.hbm2ddl.auto" value="none" />
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/commonsos" />
      <property name="hibernate.connection.username" value="commonsos" />
      <property name="hibernate.connection.password" value="commonsos" />
      <property name="hibernate.physical_naming_strategy" value="commonsos.PhysicalNamingStrategyImpl"/>
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.connection.provider_class"
                value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider" />
      <property name="hibernate.c3p0.max_size" value="100" />
      <property name="hibernate.c3p0.min_size" value="0" />
      <property name="hibernate.c3p0.acquire_increment" value="1" />
      <property name="hibernate.c3p0.idle_test_period" value="300" />
      <property name="hibernate.c3p0.max_statements" value="0" />
      <property name="hibernate.c3p0.timeout" value="100" />
      <property name="hibernate.c3p0.checkoutTimeout" value="5000" />
    </properties>
  </persistence-unit>
</persistence>
